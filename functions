

init_paths() {
  for i in /opt/local /usr/local; do
    local bin_path="$i/bin"
    if [ -d "$bin_path" ]; then
      PATH=$bin_path:$PATH
    fi
    local sbin_path="$i/sbin"
    if [ -d "$sbin_path" ]; then
      PATH=$sbin_path:$PATH
    fi
    local man_path="$i/share/man"
    if [ -d "$man_path" ]; then
      PATH=$man_path:$MANPATH
    fi
  done
}

init_editor() {
  export EDITOR=/Applications/MacVim.app/Contents/MacOS/Vim
  alias vi='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
  alias vim='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
}

init_rbenv() {
  eval "$(rbenv init -)"
  if [ -f ~/.rbenv/completions/rbenv.bash ]; then
    source ~/.rbenv/completions/rbenv.bash
  fi
}

init_virtualenv() {
  export WORKON_HOME=$HOME/.virtualenvs
  if [ -d $WORKON_HOME ]; then
    mkdir -p $WORKON_HOME
  fi
  source `which virtualenvwrapper.sh`

  alias mkve=mkvirtualenv
  alias rmve=rmvirtualenv
  alias lsve=lsvirtualenv
}
